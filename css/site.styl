@import "kouto-swiss"

@import "helpers"
@import "genericons"

meyer-reset()
box-sizing-reset()
normalize()


$cols = 12
$col = 70px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
  min-height: 1px
for col in 1..$cols
  .col-{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )


// FLUID COLS

.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .s-into-{pcol}
    width: ( 100% / pcol )

@media screen and (min-width: 601px)

  for pcol in 1..$pcols
    .m-into-{pcol}
      width: ( 100% / pcol )

@media screen and (min-width: 993px)

  for pcol in 1..$pcols
    .l-into-{pcol}
      width: ( 100% / pcol )


// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 5)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)


// TYPOGRAPHY

body
  font-family: helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto


// FIXED ELEMENTS

#header
  position: fixed
  top: 0
  left: 0
  right: 0

#footer
  display: none
  position: fixed
  bottom: 0
  left: 0
  right: 0

.page, .single
  #footer
    display: block

#gradient
  position: fixed
  top: 0
  right: 0
  bottom: 0
  width: 10%
  background-image: linear-gradient(to right,  rgba(255,255,255,0) 0%,rgba(216,216,216,0.33) 33%,rgba(63,63,63,0.7) 70%,rgba(19,19,19,1) 100%)

#loading
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: -999


// LAYOUT

#subheader
  display: none

.index
  #subheader
    display: block

#main-content
  // is this margin does with js tho?
  margin-top: $margin-large

// COLLECTIONS

.collection-book
  margin-bottom: 1em

.book-date
  text-transform: capitalize
  display: block


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))

  html
    width: 100%

@media screen and (max-width: 601px)

  .container
    width: 96%

  .col
    width: 100%
    float: none
    margin-left: ($gutter/2)
    box-sizing: content-box

  #gradient
    display: none